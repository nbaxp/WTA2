@using WTA.Application.Extensions
@inject IStringLocalizer localizer
@{
    var action = Url.Action();
}
@section scripts{
    <template id="page">
        <app-form ref="appFormRef" v-model="model" mode="create" @@after="after"></app-form>
    </template>
    <script type="module">
        import { ref, reactive, onMounted } from 'vue';
        import { ElMessage } from 'element-plus';
        import request from 'request';
        import appForm from './src/components/form/app-form.js';
        import { useAppStore } from './src/store/index.js';

        window.page = {
            components: { appForm },
            template: '#page',
            setup() {
                const appStore = useAppStore();
                const model = reactive({
                    url: '@action',
                    data: (@Json.Serialize(Model)),
                    errors: (@Json.Serialize(ViewData.ModelState.ToErrors())),
                    schema: (@Json.Serialize(ViewData.ModelMetadata.GetSchema(ViewContext.HttpContext.RequestServices)))
                });
                const appFormRef = ref(null);
                const after = async (result) => {
                    console.log(result);
                    const { access_token } = result;
                    localStorage.setItem("token", access_token);
                    window.location = model.data.returnUrl;
                };

                return {
                    model,
                    after
                }
            }
        };
    </script>
}
<!--Shared.Default.cshtml-->
